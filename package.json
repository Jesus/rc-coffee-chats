{
  "name": "hello-sqlite",
  "version": "0.0.1",
  "description": "A simple Node app with SQLite as a database management system, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "tsc": "tsc",
    "test": "echo test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.16.3",
    "sqlite3": "^4.0.0",
    "zulip-js": "^2.0.5",
    "lodash": "^4.17.11",
    "winston": "^2.4.0"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "url": "https://github.com/thechutrain/coffee-chats-2.0"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "ts-node": "^8.0.1",
    "typescript": "^3.2.4"
  }
}
