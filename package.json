{
  "name": "rc-coffee-chats",
  "version": "0.0.1",
  "description": "A simple Node app with SQLite as a database management system, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "start": "cross-env NODE_ENV=production ts-node src/server.ts",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "tsc": "npm run clean && tsc",
    "tslint": "tslint --format stylish --project tsconfig.json",
    "test:db": "cross-env DB_FILE=test.db DEBUG=1 ts-node ./src/db/",
    "clean:db": "rimraf .data/test.db",
    "pretest": "rimraf src/db/__tests__/*.db",
    "test": "cross-env DB_FILE=test.db jest",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^4.2.0",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "pg": "^7.8.0",
    "rimraf": "^2.6.3",
    "winston": "^2.4.0",
    "zulip-js": "^2.0.5"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "url": "https://github.com/thechutrain/coffee-chats-2.0"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/pg": "^7.4.11",
    "dotenv": "^6.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  }
}
