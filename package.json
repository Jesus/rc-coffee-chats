{
  "name": "rc-coffee-chats",
  "version": "0.0.1",
  "description": "A simple Node app with SQLite as a database management system, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "start": "ts-node src/server.ts",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "tsc": "npm run clean && tsc",
    "tslint": "tslint --format stylish --project tsconfig.json",
    "test:db": "cross-env DB_FILE=test.db DEBUG=1 ts-node src/db/index.ts",
    "clean:db": "rimraf .data/test.db",
    "test": "cross-env DB_FILE=test.db jest",
    "test:watch": "jest --watch",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "better-sqlite3": "^4.2.0",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "winston": "^2.4.0",
    "zulip-js": "^2.0.5"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "url": "https://github.com/thechutrain/coffee-chats-2.0"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  }
}
